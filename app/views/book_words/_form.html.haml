= form_for @book_word do |f|
  - if @book_word.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book_word.errors.count, "error")} prohibited this book_word from being saved:"
      %ul
        - @book_word.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :lemma
    = f.text_field :lemma
  .field
    = f.label :pos
    = f.text_field :pos
  .actions
    = f.submit 'Save'
