%h1 Listing books

%table
  %thead
    %tr
      %th Path
      %th Title
      %th Author
      %th Translator
      %th Content
      %th
      %th
      %th

  %tbody
    - @books.each do |book|
      %tr
        %td= book.path
        %td= book.title
        %td= book.author
        %td= book.translator
        %td= book.content
        %td= link_to 'Show', book
        %td= link_to 'Edit', edit_book_path(book)
        %td= link_to 'Destroy', book, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

