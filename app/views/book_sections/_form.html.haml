= form_for @book_section do |f|
  - if @book_section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book_section.errors.count, "error")} prohibited this book_section from being saved:"
      %ul
        - @book_section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :book_part
    = f.text_field :book_part
  .field
    = f.label :index
    = f.number_field :index
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
